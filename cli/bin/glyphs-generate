#!/usr/bin/env node

const parseArgs = require('minimist')

const args = process.argv.slice(2)
const argv = parseArgs(args, {
  alias: {
    h: 'help'
  },
  boolean: ['h']
})

if (argv.help) {
  console.log(`
  Description
  Generate a component set from an exported Glyphs icon set. Options must be supplied in a 'glyphs.config.json' file.

  Usage
    $ glyphs generate

  Options
    --help, -h     Displays this message
  `)
  process.exit()
}

const fs = require('fs')
const path = require('path')
const { camelCase } = require('lodash')
const inquirer = require('inquirer')

;(async () => {
  const config = require(path.join(process.cwd(), 'glyphs.config.js'))

  if (!config || !config.generate) {
    throw new Error(`A config file wasn't supplied.`)
  }

  const { target } = config.generate
  const targets = ['wc', 'vue', 'react']

  console.log()

  if (target) {
    const isValid = targets.includes(target)

    if (!isValid) {
      target = null
    }
  }

  if (!target) {
    const choices = targets
    const questions = [{
      type: 'list',
      name: 'name',
      message: 'Select the package to create',
      choices,
    }]

    const answers = await inquirer.prompt(questions)
    key = answers.name
  }

  require('../lib/generate')(config.generate)
})()
